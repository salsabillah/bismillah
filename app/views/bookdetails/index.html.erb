<p id="notice"><%= notice %></p>

<h1>Bookdetails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookdetails.each do |bookdetail| %>
      <tr>
        <td><%= bookdetail.name %></td>
        <td><%= bookdetail.email %></td>
        <td><%= bookdetail.amount %></td>
        <td><%= link_to 'Show', bookdetail %></td>
        <td><%= link_to 'Edit', edit_bookdetail_path(bookdetail) %></td>
        <td><%= link_to 'Destroy', bookdetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

